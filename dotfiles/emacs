  :custom
    (whitespace-style '(face tabs spaces trailing lines-tail space-before-tab missing-newline-at-eof empty space-mark tab-mark))
  :hook
    (after-init . global-whitespace-mode)
    (before-save . delete-trailing-whitespace))

